<div class="soru">
  <div class="row align-items-center">

    <div class="col-12">
      <div class="soruBaslik">
        <a href="/sorular/soru/<%= soru._id %>">
          <h3><%= soru.title %></h3>
        </a>

      </div>
      <div class="soruIcerik">
        <% soru.htmlContent = soru.htmlContent.replace(/(<([^>]+)>)/gi, ""); %>
        <p>
          <% if (soru.htmlContent.length>100) { %>
          <%= soru.htmlContent.substring(0,100)+"..."; %>
          <% } else { %>
          <%= soru.htmlContent %>
          <% } %>
        </p>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex gap-3">
          <div class="soruBadge bg-mavi">
            <i class="fa-solid fa-thumbs-up"></i>
            <span><%= soru.likeCount %></span>
          </div>
          <div class="soruBadge bg-kirmizi">
            <i class="fa-solid fa-thumbs-down"></i>
            <span><%= soru.dislikeCount %></span>
          </div>
          <div class="soruBadge bg-yesil">
            <i class="fa-solid fa-comment-dots"></i>
            <span><%= soru.cevaplar.length %></span>
          </div>
        </div>
        <div class="bg-sari text-light rounded p-1 my-2">
          <i class="fa-solid fa-calendar-days"></i>
          <%= soru.createdAt %>
        </div>
      </div>

    </div>
  </div>

</div>