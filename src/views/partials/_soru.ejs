<div class="soru">
  <div class="row align-items-center">
    <div class="col-12">
      <div class="soruBaslik">
        <a href="/sorular/soru/<%= soru._id %>">
          <h4><%= soru.title %></h4>
        </a>
      </div>
      <div class="soruIcerik">
        <% soru.htmlContent = soru.htmlContent.replace(/(<([^>]+)>)/gi, ""); %>
        <p>
          <% if (soru.htmlContent.length>100) { %>
          <%= soru.htmlContent.substring(0,100)+"..."; %>
          <% } else { %>
          <%= soru.htmlContent %>
          <% } %>
        </p>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <div class="soruBadge bg-yesil">
          <i class="fa-solid fa-comment-dots"></i>
          <span><%= soru.cevaplar.length %></span>
        </div>
        <div class="text-kapalimavi text-light rounded p-1 my-2">
          <i class="fa-solid fa-calendar-days"></i>
          <%= soru.createdAt %>
        </div>
      </div>

    </div>
  </div>

</div>