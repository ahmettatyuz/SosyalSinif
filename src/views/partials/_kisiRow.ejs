<div class="kisi" id="<%= kisi._id %>">
  <a>
    <div class="d-flex justify-content-between align-items-center">
      <div class="kisiLeft d-flex align-items-center gap-3">
        <div class="kisiImg">
          <img class="kisiImage" src="<%= kisi.profileImage %>" alt="">
        </div>
        <div>
          <div class="kisiAd"><%= kisi.ad +" "+ kisi.soyad %></div>
          <% 
            if(kisi.sonMesaj.mesaj.length>20){
              kisi.sonMesaj.mesaj = kisi.sonMesaj.mesaj.substring(0,20)+"...";
            } 
          %>
          <div class="kisiSonMesaj"><%= kisi.sonMesaj.mesaj %></div>
          <div class="yaziyor kisiSonMesaj" style="display:none;">yazÄ±yor...</div>
        </div>
      </div>
      <div class="kisiRight d-flex gap-3">
        <% if (kisi.unseenCount>0) { %>
        <div class="unseenMessages">
          <%= kisi.unseenCount %>
        </div>
        <% } %>
        <div class="messageTime"><%= kisi.sonMesaj.time %></div>
      </div>

    </div>
  </a>
</div>