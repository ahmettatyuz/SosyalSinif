<div class="columnRow odevRow">
  <div class="d-flex justify-content-between align-items-center">
    <div class="left">
      <h4><%= odev.title %></h4>
      <p><%= odev.aciklama %></p>
      <div class="badge bg-kirmizi">Son Teslim Tarihi: <br> <%= odev.teslimTarihi %></div>
    </div>
    <div class="right pb-2">
      <!-- eğer öğrenci ise başla butonu olacak -->
      <!-- öğretmen ise başla butonu gözükmeyecek -->
      <div>
        Puan:<%= odev.puan %>
      </div>
      <% if (userSession.role=="ogrenci") { %>
        <a href="#" class="button button-success">Başla</a>
      <% } else if (userSession.role=="ogretmen") { %>
        <button class="button button-danger">Ödevi Kaldır</button>
      <% } %>
      
    </div>

  </div>
  <div class="progress mt-2" role="progressbar" aria-label="Animated striped example" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
    <div class="progress-bar bg-mavi progress-bar-striped progress-bar-animated" style="width: 75%"></div>
  </div>
</div>